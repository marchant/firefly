{
    "variables": {
        "do_api_key": null,
        "do_client_id": null,
        "snapshot_name": null,
        "home": "{{env `HOME`}}",
        "build": "{{env `BUILD`}}",
        "base_image_id": null,
        "region_id": "{{env `REGION_ID`}}"
    },

    "builders": [{
        "type": "digitalocean",
        "api_key": "{{user `do_api_key`}}",
        "client_id": "{{user `do_client_id`}}",
        "image_id": "{{user `base_image_id`}}",
        "region_id": "{{user `region_id`}}",
        "size_id": 66,
        "private_networking": false,
        "ssh_timeout": "12m",
        "state_timeout": "12m",
        "snapshot_name": "{{user `snapshot_name`}}",
        "droplet_name": "firefly-login-image"
    }],

    "provisioners": [{
        "type": "shell",
        "inline": ["sleep 30"]
    }, {
        "type": "file",
        "source": "{{user `build`}}/filament.tgz",
        "destination": "/srv/filament.tgz"
    }, {
        "type": "file",
        "source": "{{user `build`}}/firefly.tgz",
        "destination": "/srv/firefly.tgz"
    }, {
        "type": "shell",
        "script": "{{user `home`}}/deploy/provision/login.sh"
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/services/firefly-login.conf",
        "destination": "/etc/init/firefly-login.conf"
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/redis.conf",
        "destination": "/etc/redis/redis.conf"
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/redis-sentinel.conf",
        "destination": "/etc/redis/redis-sentinel.conf"
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/services/redis-sentinel.conf",
        "destination": "/etc/init/redis-sentinel.conf"
    }]
}
