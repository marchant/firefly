{
    "variables": {
        "do_api_key": null,
        "do_client_id": null,
        "snapshot_name": null,
        "home": "{{env `HOME`}}",
        "build": "{{env `BUILD`}}",
        "base_image_id": null,
        "region_id": "{{env `REGION_ID`}}"
    },

    "builders": [{
        "type": "digitalocean",
        "api_key": "{{user `do_api_key`}}",
        "client_id": "{{user `do_client_id`}}",
        "image_id": "{{user `base_image_id`}}",
        "region_id": "{{user `region_id`}}",
        "size_id": 66,
        "private_networking": false,
        "ssh_timeout": "12m",
        "state_timeout": "12m",
        "snapshot_name": "{{user `snapshot_name`}}",
        "droplet_name": "firefly-base-image"
    }, {
        "type": "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",
        "iso_url": "http://releases.ubuntu.com/13.10/ubuntu-13.10-server-amd64.iso",
        "iso_checksum": "2bead0f1f451734461ff88f913f4b02ba9e873b15f097a5c231bdb3763ea42e3",
        "iso_checksum_type": "sha256",

        "boot_command": [
            "<esc><wait>",
            "<esc><wait>",
            "<enter><wait>",
            "/install/vmlinuz<wait>",
            " auto<wait>",
            " console-setup/ask_detect=false<wait>",
            " console-setup/layoutcode=us<wait>",
            " console-setup/modelcode=pc105<wait>",
            " debconf/frontend=noninteractive<wait>",
            " debian-installer=en_US<wait>",
            " fb=false<wait>",
            " initrd=/install/initrd.gz<wait>",
            " kbd-chooser/method=us<wait>",
            " keyboard-configuration/layout=USA<wait>",
            " keyboard-configuration/variant=USA<wait>",
            " locale=en_US<wait>",
            " netcfg/get_domain=vm<wait>",
            " netcfg/get_hostname={{.Name}}<wait>",
            " noapic<wait>",
            " preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg<wait>",
            " -- <wait>",
            "<enter><wait>"
        ],
        "boot_wait": "10s",
        "guest_os_type": "Ubuntu_64",
        "http_directory": "deploy/vagrant",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "ssh_port": 22,
        "ssh_wait_timeout": "600s",
        "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
        "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
        "headless": true,
        "virtualbox_version_file": ".vbox_version",
        "vboxmanage": [
            [
                "modifyvm",
                "{{.Name}}",
                "--memory",
                "512"
            ],
            [
                "modifyvm",
                "{{.Name}}",
                "--cpus",
                "1"
            ]
        ]
    }],

    "provisioners": [
    {
        "type": "shell",
        "inline": ["sleep 30"]
    },

    {
        "type": "shell",
        "only": ["virtualbox-iso"],
        "override": { "virtualbox-iso": { "execute_command": "echo 'vagrant'|{{.Vars}} sudo -S -E bash '{{.Path}}'" } },
        "script": "{{user `home`}}/deploy/vagrant/setup.sh"
    },

    {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/authorized_keys",
        "destination": "/tmp/authorized_keys"
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/sudoers",
        "destination": "/tmp/sudoers"
    }, {
        "type": "shell",
        "override": { "virtualbox-iso": { "execute_command": "echo 'vagrant'|{{.Vars}} sudo -S -E bash '{{.Path}}'" } },
        "script": "{{user `home`}}/deploy/provision/base.sh"
    }],

    "post-processors": [
        {
            "type": "vagrant",
            "only": ["virtualbox-iso"]
        }
    ]
}
