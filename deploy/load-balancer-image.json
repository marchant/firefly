{
    "variables": {
        "do_api_key": null,
        "do_client_id": null,
        "snapshot_name": null,
        "home": "{{env `HOME`}}",
        "build": "{{env `BUILD`}}",
        "image_id": "{{env `BASE_IMAGE_ID`}}",
        "region_id": "{{env `REGION_ID`}}"
    },

    "builders": [{
        "type": "digitalocean",
        "api_key": "{{user `do_api_key`}}",
        "client_id": "{{user `do_client_id`}}",
        "image_id": "{{user `image_id`}}",
        "region_id": "{{user `region_id`}}",
        "size_id": 66,
        "private_networking": false,
        "ssh_timeout": "12m",
        "state_timeout": "12m",
        "snapshot_name": "{{user `snapshot_name`}}",
        "droplet_name": "firefly-load-balancer-image"
    }],

    "provisioners": [{
        "type": "shell",
        "inline": ["sleep 30"]
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/30-haproxy.conf",
        "destination": "/etc/rsyslog.d/30-haproxy.conf"
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/montagestudio.com.pem",
        "destination": "/etc/ssl/montagestudio.com.pem"
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/project.montagestudio.net.pem",
        "destination": "/etc/ssl/project.montagestudio.net.pem"
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/staging-project.montagestudio.net.pem",
        "destination": "/etc/ssl/staging-project.montagestudio.net.pem"
    }, {
        "type": "shell",
        "script": "{{user `home`}}/deploy/provision/load-balancer.sh"
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/haproxy.cfg",
        "destination": "/etc/haproxy/haproxy.cfg"
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/errors/",
        "destination": "/etc/haproxy/errors"
    }]
}
